{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"paths": {
			"*": [
				"./*"
			]
		},
		"rootDir": "src",
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"outDir": "dist",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"types": [
			"vite/client"
		]
	},
	"exclude": [
		"src/**/__snapshots__/",
		"src/**/*.spec.ts"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}