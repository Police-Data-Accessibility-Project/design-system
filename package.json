{
	"name": "pdap-design-system",
	"version": "1.1.6",
	"description": "Global styles for PDAP apps",
	"author": "Police Data Accessibility Project, Inc.",
	"license": "ISC",
	"homepage": "https://github.com/Police-Data-Accessibility-Project/design-system#readme",
	"bugs": {
		"url": "https://github.com/Police-Data-Accessibility-Project/design-system/issues"
	},
	"exports": {
		"import": {
			"default": "./dist/css/global-styles.css"
		},
		"require": {
			"default": "./dist/css/global-styles.css"
		}
	},
	"main": "./dist/css/global-styles.css",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Police-Data-Accessibility-Project/design-system.git"
	},
	"directories": {
		"doc": "docs"
	},
	"engines": {
		"npm": ">=9.0.0",
		"node": ">=18.0.0"
	},
	"browserslist": {
		"production": [
			">0.01%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			">0.01%",
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.5",
		"tailwindcss": "^3.3.3"
	},
	"dependencies": {
		"fs-extra": "^11.1.1",
		"minimist": "^1.2.8"
	},
	"scripts": {
		"build": "run-p build:*",
		"build:assets": "mkdir -p ./dist/images && cp -a ./src/images ./dist",
		"build:styles": "npm run styles",
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"prepare": "npm run build",
		"prepublishOnly": "npm run build",
		"styles": "npx tailwindcss -i ./src/css/global-styles.css -o ./dist/css/global-styles.css",
		"styles:watch": "npm run styles -- --watch",
		"test": "echo \\\"No tests for CSS-only package.\\\" && exit 0"
	},
	"files": [
		"bin",
		"dist",
		"system",
		"README.md"
	],
	"bin": {
		"pdap-design-system": "./bin/pdap-design-system-cli.js"
	},
	"keywords": [
		"pdap-design-system"
	]
}
